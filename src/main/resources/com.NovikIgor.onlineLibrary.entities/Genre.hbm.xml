<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.NovikIgor.onlineLibrary.entities.Genre" table="genre" schema="library">
        <id name="id">
            <column name="id" sql-type="bigint(20)"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(100)" length="100"/>
        </property>
        <many-to-one name="authorByParent" class="com.NovikIgor.onlineLibrary.entities.Author">
            <column name="parent" not-null="true"/>
        </many-to-one>
        <set name="booksById" inverse="true">
            <key>
                <column name="genre_id"/>
            </key>
            <one-to-many not-found="ignore" class="com.NovikIgor.onlineLibrary.entities.Book"/>
        </set>
    </class>
</hibernate-mapping>